{
  "name": "by-byte-site",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:gh": "ng build --base-href=/ByByteSite/",
    "postbuild:gh": "cp -f dist/ByByteSite/browser/index.html dist/ByByteSite/browser/404.html || true",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy:gh": "npm run build:gh && npx -y angular-cli-ghpages --dir=dist/ByByteSite/browser",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prepare": "npx simple-git-hooks"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.mjs$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ],
      "^.+\\.(ts|js|html)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json",
          "useESM": true,
          "stringifyContentPathRegex": ".html$"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@angular|rxjs|jest-preset-angular|tslib)/"
    ],
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "jest",
        "browser"
      ]
    },
    "testMatch": [
      "**/__tests__/**/*.spec.ts",
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "html",
      "js",
      "json",
      "mjs"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "angular-cli-ghpages": "^2.0.3",
    "babel-jest": "^30.2.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^60.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.1",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.4.4",
    "typescript": "~5.9.2"
  }
}
